/* 文章场景相关 */
.search-container.data-v-c10c040c {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f9fa;
}
.search-header.data-v-c10c040c {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.search-box.data-v-c10c040c {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  border-radius: 36rpx;
  padding: 0 20rpx;
  height: 72rpx;
}
.search-icon.data-v-c10c040c {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.search-input.data-v-c10c040c {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}
.clear-icon.data-v-c10c040c {
  padding: 10rpx;
}
.cancel-btn.data-v-c10c040c {
  font-size: 28rpx;
  color: #1a73e8;
  margin-left: 20rpx;
  padding: 10rpx;
}

/* 搜索历史 */
.search-history.data-v-c10c040c {
  background-color: #fff;
  padding: 30rpx;
}
.history-header.data-v-c10c040c {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.history-title.data-v-c10c040c {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.clear-history.data-v-c10c040c {
  padding: 10rpx;
}
.history-list.data-v-c10c040c {
  display: flex;
  flex-wrap: wrap;
}
.history-item.data-v-c10c040c {
  background-color: #f5f5f5;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* 搜索结果 */
.search-results.data-v-c10c040c {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.tabs.data-v-c10c040c {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.tab-item.data-v-c10c040c {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.tab-item.active.data-v-c10c040c {
  color: #1a73e8;
  font-weight: 500;
}
.tab-item.active.data-v-c10c040c:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #1a73e8;
  border-radius: 3rpx;
}
.results-list.data-v-c10c040c {
  flex: 1;
  background-color: #f8f9fa;
}
.no-results.data-v-c10c040c {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 笔记瀑布流样式 - 与find页面保持一致 */
.masonry.data-v-c10c040c {
  column-count: 2;
  column-gap: 2rpx;
  padding: 0rpx;
  background-color: #f8f9fa;
  min-height: calc(100vh - 300rpx);
}
.box.data-v-c10c040c {
  break-inside: avoid;
  margin-bottom: 5rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}
.box.data-v-c10c040c:active {
  transform: scale(0.98);
}

/* 用户列表 */
.user-list.data-v-c10c040c {
  padding: 20rpx 30rpx;
}
.user-item.data-v-c10c040c {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}
.user-avatar.data-v-c10c040c {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-info.data-v-c10c040c {
  flex: 1;
}
.user-name.data-v-c10c040c {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.user-intro.data-v-c10c040c {
  font-size: 26rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/* 加载状态 */
.loading.data-v-c10c040c, .no-more.data-v-c10c040c {
  text-align: center;
  padding: 20rpx;
  font-size: 26rpx;
  color: #999;
}